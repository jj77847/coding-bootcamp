<div class="menu-container">
  <div class="card-header col-md-12 text-center">
    <h2>
      &#127869 Current Menu
    </h2>
  </div>
  {{#if dishes.length}}
    {{#each dishes as |dish|}}
      <div class="dish col-md-5">
        <p>
          {{dish.id}}.
          {{dish.dish_name}}
        </p>
      </div>
      <div class="col-md-7">
        <p>
          Guest:
          {{dish.guest_name}}
        </p>
      </div>
    {{/each}}
  {{else}}
    <div class="dish col-md-12">
      You have no dishes
    </div>
  {{/if}}
  <!-- This is the form for adding a new dish -->
  <div class="add-dish-container">
    <h2>
      RSVP with the dish you plan to bring!
    </h2>
    <form class="new-dish-form">
      <label for="dish_name">
        Dish Name:
      </label>
      <br />
      <textarea id="dish_name" name="dish_name" rows="2" cols="30">
      </textarea>
      <br />
      <label for="description">
        Description:
      </label>
      <br />
      <textarea id="description" name="description" rows="5" cols="30">
      </textarea>
      <br />
      <label for="guest_name">
        Guest Name:
      </label>
      <br />
      <textarea id="guest_name" name="guest_name" rows="2" cols="30">
      </textarea>
      <br />
      <br />
      <input type="checkbox" id="has_nuts" name="has_nuts" />
      <label for="has_nuts">
        Check box if this dish contains nuts
      </label>
      <br />
      <button type="submit" value="Submit">
        Submit
      </button>
    </form>
  </div>
</div>

<script src="/js/add-dish.js"></script>