<section class="container">
  <h3 class="gallery-name">{{gallery.name}}</h3>
  <h4>Opening Hour: {{formatTime gallery.starting_date}}</h4>
  <h4>Closing Hour: {{formatTime gallery.ending_date}}</h4>
  <section class="flex-row justify-center">
    {{#each gallery.paintings as |painting|}}
    {{> painting-details}}
    {{/each}}
  </section>
</section>
